<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="selected" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/isSelected</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="isNotSelected" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/isNotSelected</item>
        <item name="cornerRadius">12dp</item>
        <item name="fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>